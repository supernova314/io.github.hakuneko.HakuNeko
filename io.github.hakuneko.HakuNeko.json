{
	"app-id": "io.github.hakuneko.HakuNeko",
	"base": "org.electronjs.Electron2.BaseApp",
	"base-version": "23.08",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "23.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "hakuneko",
	"separate-locales": false,
	"rename-desktop-file": "hakuneko-desktop.desktop",
	"rename-icon": "hakuneko-desktop",
	"finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=home"
	],
	"modules": [
		{
			"name": "hakuneko-desktop",
			"buildsystem": "simple",
			"build-commands": [
				"ar x hakuneko-desktop_*.deb",
				"rm -f hakuneko-desktop_*.deb",
				"tar xf data.tar.xz",
				"rm -f control.tar.gz data.tar.xz debian-binary",
				"cp -r usr/* /app",
				"chmod -R a-s,go+rX,go-w /app/lib/hakuneko-desktop/hakuneko",
				"sed -i 's|Exec=.*|Exec=hakuneko %U|' /app/share/applications/hakuneko-desktop.desktop",
				"install hakuneko.sh /app/bin/hakuneko",
				"install -Dm644 io.github.hakuneko.HakuNeko.metainfo.xml /app/share/appdata/io.github.hakuneko.HakuNeko.metainfo.xml"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/manga-download/hakuneko/releases/download/nightly-20200705.1/hakuneko-desktop_8.3.4_linux_amd64.deb",
					"only-arches": [ "x86_64" ],
					"sha256": "48e9a77015695fe69390ac99b54184cf793f31c3452d174fcf41052ccb2ae211"
				},
				{
					"type": "file",
					"url": "https://github.com/manga-download/hakuneko/releases/download/nightly-20200705.1/hakuneko-desktop_8.3.4_linux_arm64.deb",
					"only-arches": [ "aarch64" ],
					"sha256": "5e4b992b58a67ddac96410975e10577befe67479c1c2b3d12b2bcbaf6f6c003a"
				},
				{
					"type": "script",
					"dest-filename": "hakuneko.sh",
					"commands": [
						"exec env TMPDIR=$XDG_CACHE_HOME zypak-wrapper /app/lib/hakuneko-desktop/hakuneko \"$@\""
					]
				},
				{
				    "type": "file",
				    "path": "io.github.hakuneko.HakuNeko.metainfo.xml"
				}
			]
		}
	]
}
